@page
@model Hakkers.Pages.Clients.EditModel

@{
    ViewData["Title"] = "Edit";
    Layout = "~/Pages/Shared/_Layout.cshtml";
}

<h4>Edit Clients</h4>

<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Client.Id" />
            <div class="form-group">
                <label asp-for="Client.FirstName" class="control-label"></label>
                <input asp-for="Client.FirstName" class="form-control" />
                <span asp-validation-for="Client.FirstName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Client.LastName" class="control-label"></label>
                <input asp-for="Client.LastName" class="form-control" />
                <span asp-validation-for="Client.LastName" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Client.TelephoneNumber" class="control-label"></label>
                <input asp-for="Client.TelephoneNumber" class="form-control" />
                <span asp-validation-for="Client.TelephoneNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Client.Email" class="control-label"></label>
                <input asp-for="Client.Email" class="form-control" />
                <span asp-validation-for="Client.Email" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Client.Street" class="control-label"></label>
                <input asp-for="Client.Street" class="form-control" />
                <span asp-validation-for="Client.Street" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Client.HouseNumber" class="control-label"></label>
                <input asp-for="Client.HouseNumber" class="form-control" />
                <span asp-validation-for="Client.HouseNumber" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Client.Location" class="control-label"></label>
                <input asp-for="Client.Location" class="form-control" />
                <span asp-validation-for="Client.Location" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Client.PostalCode" class="control-label"></label>
                <input asp-for="Client.PostalCode" class="form-control" />
                <span asp-validation-for="Client.PostalCode" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Save" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
